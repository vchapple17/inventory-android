<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.valchapple.hybrid_android.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_devices"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/home_btn_devices"
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_users"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/home_btn_users"
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_checkin"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/home_btn_checkin"
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_checkout"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="@string/home_btn_checkout"
            android:textColor="@color/colorText"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
