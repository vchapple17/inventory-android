<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_device_status"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="CHECKED OUT"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"

        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        tools:context="com.example.valchapple.hybrid_android.fragments.DeviceDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_device_serial"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:text="DMPP34SDF943KD"
        android:textIsSelectable="true"
        tools:context="com.example.valchapple.hybrid_android.fragments.DeviceDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_device_color"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:text="dummy color"
        android:textColor="@color/colorText"
        android:textIsSelectable="true"
        tools:context="com.example.valchapple.hybrid_android.fragments.DeviceDetailFragment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/detail_device_edit_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="@string/btn_device_detail_edit_btn"
        android:textColor="@color/colorText"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/detail_device_delete_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@color/colorDelete"
        android:text="@string/btn_device_detail_delete_btn"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</LinearLayout>
